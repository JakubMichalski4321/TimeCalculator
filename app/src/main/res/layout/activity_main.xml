<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/bg">
    <Button
            android:text="Oblicz"
            android:layout_width="221dp"
            android:layout_height="68dp"
            android:id="@+id/obliczButton"
            android:textSize="18sp" android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/minutesSetEditText" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="303dp"
            android:layout_height="42dp"
            android:id="@+id/currentTimeView"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/editText5" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#ABFFFFFF"/>
    <TextView
            android:layout_width="271dp"
            android:layout_height="63dp"
            android:id="@+id/resultText" android:textSize="48sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/obliczButton"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.494" android:textColor="#FFFFFF"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Przelicznik Garbacki"
            android:ems="10"
            android:id="@+id/editText5"
            android:typeface="normal" android:textSize="18sp"
            android:textStyle="bold" android:background="#3F51B5"
            android:gravity="center" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="234dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/minutesSetEditText"
            android:hint="podaj garbackie minuty"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/currentTimeView" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#7C070707" android:background="#A6FFFFFF" android:textStyle="italic"/>


</androidx.constraintlayout.widget.ConstraintLayout>